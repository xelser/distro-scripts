# colors
if [[ $(gsettings get org.x.apps.portal color-scheme) == "default" ]]; then
	fg="30"
elif [[ $(gsettings get org.x.apps.portal color-scheme) == "prefer-dark" ]]; then
	fg="37"
fi

PS1="\[\e[1;${fg}m\]┌[\[\e[1;33m\]\u\[\e[1;36m\]@\h\[\e[1;${fg}m\]] \[\e[1;${fg}m\]::\[\e[1;31m\] \W \[\e[1;${fg}m\]::\n\[\e[1;${fg}m\]└\[\e[1;35m\]➤\[\e[0;${fg}m\]  "
