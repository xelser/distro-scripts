# colors
if [[ $(gsettings get org.cinnamon.desktop.interface gtk-theme) == "vimix-dark-compact-jade" ]]; then
	fg="37"
elif [[ $(gsettings get org.cinnamon.desktop.interface gtk-theme) == "vimix-compact-jade" ]]; then
	fg="30"
fi

